<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded">
        <form action="/editingTask/{{taskToEdit._id}}" method="POST">
          <div class="mb-3">
            <center>
              <h3>Actualiza la tarea</h3>
            </center>
            <input
              type="text"
              name="title"
              placeholder="Titulo"
              value="{{taskToEdit.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <div class="mb-3">
            <textarea
              name="description"
              rows="3"
              placeholder="Agrega una descripcion"
              class="form-control rounded-0 bg-dark text-white"
            >{{taskToEdit.description}}</textarea>
          </div>
          <button class="btn btn-primary">Guardar</button>
        </form>
      </div>
    </div>
  </div>
</div>